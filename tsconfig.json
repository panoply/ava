{
  "extends": "@liquify/tsconfig",
  "exclude": [
    "node_modules/**",
    "package",
    "test"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "removeComments": false,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "incremental": false,
    "typeRoots": [
      "node_modules/@types",
    ],
    "outDir": "package",
    "baseUrl": "."
  }
}